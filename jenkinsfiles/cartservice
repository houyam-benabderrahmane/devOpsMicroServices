pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        AWS_ACCOUNT_ID = "965836445408"
        ECR_REPO = "cartservice"
        ECR_URI = "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/${ECR_REPO}"
        GIT_REPO = "devOpsMicroServices"
        GIT_USER = "houyam-benabderrahmane"
        GIT_EMAIL = "houyem.benabderrahmane@univ-constantine2.dz"
        YAML_FILE = "cartservice.yaml"
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/houyam-benabderrahmane/devOpsMicroServices.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('src/cartservice/src') {
                    sh '''
                        docker system prune -f
                        docker build -t ${ECR_REPO}:latest .
                    '''
                }
            }
        }

        stage('Login to ECR') {
            steps {
                sh '''
                    aws ecr get-login-password --region ${AWS_REGION} \
                    | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
                '''
            }
        }

        stage('Tag & Push Image to ECR') {
            steps {
                sh '''
                    docker tag ${ECR_REPO}:latest ${ECR_URI}:${BUILD_NUMBER}
                    docker push ${ECR_URI}:${BUILD_NUMBER}
                '''
            }
        }

        stage('Update Kubernetes Manifest') {
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'GIT_TOKEN')]) {
                        sh '''
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER}"

                            sed -i "s#image:.*#image: ${ECR_URI}:${BUILD_NUMBER}#g" ${YAML_FILE}

                            git add ${YAML_FILE}
                            git commit -m "Update cartservice image to ${BUILD_NUMBER}"
                            git push https://${GIT_TOKEN}@github.com/${GIT_USER}/${GIT_REPO}.git main
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline completed successfully!"
        }
        failure {
            echo "❌ Pipeline failed - check logs"
        }
    }
}
