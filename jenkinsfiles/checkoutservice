pipeline {
    agent any 

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'master', url: 'https://github.com/melbouls/Microservices-E-Commerce-eks-project.git'
            }
        }

        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/checkoutservice') {
                        sh 'docker system prune -f'
                        sh 'docker container prune -f'
                        sh 'docker build -t checkoutservice .'
                    }
                }
            }
        }

        stage("ECR Image Pushing") {
            steps {
                script {
                    sh '''
                    # Authenticate Docker to AWS ECR
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 471112686466.dkr.ecr.us-east-1.amazonaws.com

                    # Tag the image with the build number
                    docker tag checkoutservice:latest 471112686466.dkr.ecr.us-east-1.amazonaws.com/checkoutservice:${BUILD_NUMBER}

                    # Push the image to ECR
                    docker push 471112686466.dkr.ecr.us-east-1.amazonaws.com/checkoutservice:${BUILD_NUMBER}
                    '''
                }
            }
        }

        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "Microservices-E-Commerce-eks-project"
                GIT_EMAIL = "melbouls@gmail.com" // change si tu veux ton email
                GIT_USER_NAME = "melbouls"
                IMAGE_NAME = "checkoutservice"
                REPO_URL = "471112686466.dkr.ecr.us-east-1.amazonaws.com/checkoutservice"
                YAML_FILE = "checkoutservice.yaml"
            }
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        sh '''
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"
                            BUILD_NUMBER=${BUILD_NUMBER}
                            echo $BUILD_NUMBER

                            # Update Kubernetes deployment YAML with the new image
                            sed -i "s#image:.*#image: ${REPO_URL}:$BUILD_NUMBER#g" ${YAML_FILE}

                            # Commit & push to your fork
                            git add .
                            git commit -m "Update ${IMAGE_NAME} image to version ${BUILD_NUMBER}"
                            git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:master
                        '''
                    }
                }
            }
        }
    }
}
