pipeline {
    agent any

    parameters {
        choice(
            name: 'ACTION',
            choices: ['apply', 'destroy'],
            description: 'üîß Select the Terraform action to perform (apply = create/update, destroy = delete all)'
        )
    }

    environment {
        TF_BACKEND_BUCKET = "ml-terraform-state-8749f2b4"
        TF_REGION         = "us-east-1"
        TERRAFORM_DIR     = "ecr-terraform"
    }

    stages {
        stage('Checkout from Git') {
            steps {
                checkout scm
            }
        }

        stage('Terraform version') {
            steps {
                sh 'terraform --version'
            }
        }

        stage('Terraform init') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    sh """
                    terraform init -reconfigure \\
                        -backend-config="bucket=${TF_BACKEND_BUCKET}" \\
                        -backend-config="key=ecr/terraform.tfstate" \\
                        -backend-config="region=${TF_REGION}"
                    """
                }
            }
        }

        stage('Terraform validate') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform plan') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform apply') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                dir("${TERRAFORM_DIR}") {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Terraform destroy') {
            when {
                expression { params.ACTION == 'destroy' }
            }
            steps {
                dir("${TERRAFORM_DIR}") {
                    sh 'terraform destroy -auto-approve'
                }
            }
        }
    }

    post {
        success { echo "‚úÖ ECR Repositories managed successfully!" }
        failure { echo "‚ùå Pipeline failed - check logs." }
    }
}